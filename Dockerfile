FROM node:18
# выбираем базовый образ Node.js
WORKDIR /usr/src/app
# устанавливаем рабочую директорию внутри контейнера
COPY . .
# копируем содержимое текущей директории в рабочую (текущую) директорию контейнера
RUN npm i
# устанавливаем зависимости до запуска приложения
EXPOSE 3000
# открываем порт 3000
CMD [ "npm", "start" ]
# указываем команду, которая запускает приложение при старте контейнера